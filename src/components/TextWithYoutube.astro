---
import { Image } from "astro:assets";

const { title, photo, alt, video } = Astro.props;
---

<section>
  <div class='text-wrapper'>
    <h2>{title}</h2>
    <div class='text'>
      <slot />
    </div>
  </div>
  <div class='image'>
    <iframe width="560" height="315" src={video} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" referrerpolicy="strict-origin-when-cross-origin" allowfullscreen></iframe>
  </div>
</section>

<style>
  section {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding: 2rem 0;
  }

  .text-wrapper {
    display: flex;
    flex-direction: column;
    flex: 1.5;
    > h2 {
      font-size: 1.75rem;
      font-weight: 900;
      color: var(--text1);
      font-family: var(--font-serif);
    }

    .text {
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
      font-size: 1.25rem;
      font-weight: 400;
      color: var(--text1);
      font-family: var(--font-sans);
    }
  }

  .image {
    flex: 1;
    
    > video {
      width: 100%;
      height: 100%;
    }
    > img {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }
  }

  @media only screen and (min-width: 768px) {
    section {
      flex-direction: row;
      gap: 2rem;
      padding: 5rem 0;
      align-items: flex-start;
    }

    .text {
      font-size: 1.5rem;
    }
  }
</style>
